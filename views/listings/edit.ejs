<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h3>Create a new listing </h3>
    
    <form  method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text"value="<%=listing.title%>" name="listing[title]" class="form-control">
    </div>
        
        <div class="row">
        <label for="Description" class="form-label">Description </label>
        <textarea type="text" cols="30" rows="10" name="listing[description]" class="form-control">" 
            <%=listing.description%>"</textarea>
        </div>

      

        <div class="row">
        <label for="image" class="form-label">image</label>
        <input type="text"value="<%=listing.image%>" name="listing[image]" class="form-control">
        </div>

        <div class="row">
        <div class="row col-md-4 ">
            <label for="price" class="form-label">price</label>
            <input type="number"value="<%=listing.price%>" name="listing[price]" class="form-control">
            </div><br>

        <div class="row col-md-8 ">
        <label for="location" class="form-label">location</label>
        <input type="text"value="<%=listing.location%>" name="listing[location]" class="form-control">
        </div>
    </div>
        
         <div class="row">
        <label for="country" class="form-label">country</label>
        <input type="text"value="<%=listing.country%>" name="listing[country]" class="form-control">
    </div>
        <br><br>
        <button class="btn btn-dark mg-3">edit</button>
    </form>

</body>
</div>
</div>

