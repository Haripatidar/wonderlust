 <%layout("/layouts/boilerplate")%>
<div class="row ">
        <div class="col-8 off-set-7">
                 <h1> About listing</h1>
        </div>
 <div class="card col-6 off-set-2 card-show">
        <img src="<%= listing.Image%>" alt="listing image " class="card-img-top show-img"  >
        <div class="card-body">
                <p class="card-text">
                    <b>  <%=listing.title%> </b>    <br> <br>
                 
                 <%=listing.description%> <br>
                 &#8377;<%=listing.price%> <br>
                 <%=listing.location%> <br>
                 <%=listing.country%></p> <br>
        </div>
 </div>

<div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 off-set-2">Edit</a>
        &nbsp; &nbsp; &nbsp;

    <form method="post"  action="/listings/<%= listing._id %>?_method=DELETE"><button class="btn btn-dark  off-set-4">DELETE</button></form>
</div>
</div>


